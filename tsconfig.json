{
  "ts-node": {
    "swc": true
  },
  "compilerOptions": {
    "outDir": "dist",
    "resolveJsonModule": true,
    "types": ["node"],
    "sourceMap": false,
    "strict": true,
    "useUnknownInCatchVariables": false,
    // "declaration": true,
    // "declarationDir": "dist",
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ESNext",
    "esModuleInterop": true,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    }
  },
  "include": [
    "src"
  ]
}
